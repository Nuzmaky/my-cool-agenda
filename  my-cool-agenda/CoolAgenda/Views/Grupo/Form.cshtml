@model CoolAgenda.ViewModels.GrupoVM
@{
    ViewBag.Title = "Grupo";
}

<h2>Grupo</h2>

    <table>
        @for (int i = 0; i < Model.ListaGrupo.Count; i++)
        {
            <tr>
                <td> 
                     @Html.LabelFor(m =>m.IdGrupo)
                     @Model.ListaGrupo[i].IdGrupo
                </td>

                <td>
                     @Html.LabelFor(m => m.Nome)
                     @Model.ListaGrupo[i].Nome                 
                </td>                
            </tr>
        }
    </table>     