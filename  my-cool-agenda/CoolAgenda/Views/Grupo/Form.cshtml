@model CoolAgenda.ViewModels.GrupoVM.GrupoFormVM
@{
    ViewBag.Title = "Grupo";
}

<div id="paginas">

    @{
        if (Model.Edicao)
        {
            ViewBag.Title = "Editar Grupo";
        <h1>Edite os dados do Grupo</h1>
        }
        else
        {
            ViewBag.Title = "Cadastrar Grupo";
        <h1>Informe os dados do Grupo</h1>
        }
    }
    <h2>Grupo</h2>

    @using (Html.BeginForm("Form", "Grupo", FormMethod.Post))
    {
        @Html.ValidationSummary()

        @Html.HiddenFor(m => m.Edicao)
        @Html.HiddenFor(m => m.IdGrupo)

        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome) <br />
    
        @Html.LabelFor(m => m.CNPJ)
        @Html.TextBoxFor(m => m.CNPJ, new { @class = "CNPJ" }) <br />
    
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email) <br />
        
        @Html.CheckBoxFor(m => m.FlagAtivo)
        @Html.LabelFor(m => m.FlagAtivo, new { @style = "display:inline; margin-left:2px" })   <br />
        <br />
        <input type="submit" name="btOK" value="Salvar!" />
    }

    @Html.ActionLink("Voltar", "Index")

</div>
<script>

    $(document).ready(function () {
        $(".CNPJ").mask("00.000.000/0000-00");
    });

</script>
